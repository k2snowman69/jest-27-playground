{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["ES6", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
